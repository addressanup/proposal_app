# Docker Compose Environment Variables

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=proposal_platform
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Application Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Node Environment
NODE_ENV=production

# JWT Secrets (GENERATE NEW ONES FOR PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-64-characters-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-64-characters-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000/api

# AWS S3 Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=proposal-documents

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@proposalplatform.com
