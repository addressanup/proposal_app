# Development Dockerfile with hot reload

FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/
RUN npx prisma generate

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start dev server with hot reload
CMD ["npm", "run", "dev"]
